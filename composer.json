{
    "name": "zizther/craftcms-ddev",
    "description": "A Craft CMS starter project using DDEV for local hosting and Vite for front-end bundling and HMR.",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "ddev"
    ],
    "license": "MIT",
    "type": "project",
    "support": {
        "email": "info@vimia.co.uk",
        "issues": "https://github.com/zizther/craftcms-ddev/issues",
        "source": "https://github.com/zizther/craftcms-ddev"
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true,
            "treeware/plant": false
        }
    },
    "scripts": {
        "craft-update": [
            "@pre-craft-update",
            "@post-craft-update"
        ],
        "pre-craft-update": [],
        "post-craft-update": [
            "@php craft install/check && php craft up --interactive=0 || exit 0",
            "@php craft install/check && php craft clear-caches/all --interactive=0 || exit 0",
            "@php craft install/check && php craft invalidate-tags/all --interactive=0 || return 0"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php craft setup/welcome"
        ],
        "pre-update-cmd": "@pre-craft-update",
        "pre-install-cmd": "@pre-craft-update",
        "post-update-cmd": "@post-craft-update",
        "post-install-cmd": "@post-craft-update"
    }
}
